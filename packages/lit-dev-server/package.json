{
  "name": "lit-dev-server",
  "private": true,
  "version": "0.0.0",
  "description": "lit.dev production server",
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "type": "module",
  "main": "lib/server.js",
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "start:local:main": "wireit",
    "start:local:playground": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:ts": {
      "command": "tsc --build --pretty",
      "dependencies": [
        "../lit-dev-tools-cjs:build"
      ],
      "files": [
        "src/**",
        "tsconfig.json",
        "../../tsconfig.base.json"
      ],
      "output": [
        "lib"
      ],
      "clean": "if-file-deleted"
    },
    "start:local:main": {
      "command": "LITDEV_ENV=local MODE=main node lib/server.js",
      "service": {
        "readyWhen": {
          "lineMatches": "server listening"
        }
      },
      "files": [],
      "dependencies": [
        "build",
        "../lit-dev-content:build"
      ]
    },
    "start:local:playground": {
      "command": "LITDEV_ENV=local MODE=playground node lib/server.js",
      "service": {
        "readyWhen": {
          "lineMatches": "server listening"
        }
      },
      "files": [],
      "dependencies": [
        "build"
      ]
    }
  },
  "dependencies": {
    "koa": "^3.0.1",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "lit-dev-tools-cjs": "^0.0.0",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/koa": "^2.11.6",
    "@types/koa-conditional-get": "^2.0.0",
    "@types/koa-etag": "^3.0.0",
    "@types/koa-send": "^4.1.3",
    "@types/koa-static": "^4.0.1"
  }
}
